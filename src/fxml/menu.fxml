<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MenuController">
   <ImageView fx:id="image" fitHeight="600.0" fitWidth="800.0" pickOnBounds="true">
      <Image url="@../resource/back.png" />
   </ImageView>
   <HBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: tomato; -fx-border-color: darkred; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 15; -fx-font-weight: bold;" text="LOCKED" />
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: deepskyblue; -fx-border-color: darkblue; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 15; -fx-font-weight: bold;" text="UNLOCKED" />
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: lawngreen; -fx-border-color: darkgreen; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 15; -fx-font-weight: bold;" text="COMPLETED" />
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 25; -fx-background-color: yellow; -fx-border-color: darkgoldenrod; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 15; -fx-font-weight: bold;" text="PRIZED" />
   </HBox>
   <HBox fx:id="hbox" alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="10.0" AnchorPane.bottomAnchor="5.0">
      <Button fx:id="exit" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" style="-fx-background-radius: 25; -fx-background-color: tomato; -fx-border-color: darkred; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 19; -fx-font-weight: bold;" text="EXIT" />
      <Button fx:id="setting" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" style="-fx-background-radius: 25; -fx-background-color: plum; -fx-border-color: indigo; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 19; -fx-font-weight: bold;" text="SETTING" />
      <Button fx:id="logout" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" style="-fx-background-radius: 25; -fx-background-color: yellow; -fx-border-color: darkgoldenrod; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 19; -fx-font-weight: bold;" text="LOG OUT" />
   </HBox>
   <VBox alignment="CENTER" layoutX="689.0" layoutY="20.0" prefHeight="110.0" prefWidth="100.0" style="-fx-border-color: darkblue; -fx-border-radius: 20; -fx-border-width: 5; -fx-background-color: lightskyblue; -fx-background-radius: 25;" AnchorPane.topAnchor="20.0">
      <children>
         <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="50.0">
            <graphic>
               <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../resource/Task/bank.png" />
                  </image>
               </ImageView>
            </graphic>
         </Label>
         <Label fx:id="coin" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="100.0" style="-fx-font-size: 20; -fx-font-weight: bold;" />
      </children>
   </VBox>
</AnchorPane>
