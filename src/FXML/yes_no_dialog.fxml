<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: gold; -fx-border-radius: 10; -fx-background-radius: 15; -fx-border-color: darkgoldenrod; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.YesNoController">
   <VBox alignment="CENTER" fillWidth="false" layoutX="25.0" layoutY="12.0" spacing="5.0">
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="70.0" prefWidth="250.0" style="-fx-font-size: 15; -fx-font-weight: bold;" text="Are You Sure?">
         <graphic>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../resource/labelBack.png" />
            </ImageView>
         </graphic>
      </Label>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="230.0" spacing="10.0">
         <Button fx:id="yes" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" style="-fx-background-radius: 25; -fx-background-color: lawngreen; -fx-border-color: darkgreen; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 15; -fx-font-weight: bold;" text="YES" />
         <Button fx:id="no" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" style="-fx-background-radius: 25; -fx-background-color: tomato; -fx-border-color: darkred; -fx-border-width: 5; -fx-border-radius: 25; -fx-font-size: 15; -fx-font-weight: bold;" text="NO" />
      </HBox>
   </VBox>
</AnchorPane>
